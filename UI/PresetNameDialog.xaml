<Window
    x:Class="SmartTags.UI.PresetNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:ui="clr-namespace:SmartTags.UI"
    Title="Save Preset"
    Width="400"
    Height="170"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FF1F1F1F" />
                    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FF292929" />
                    <SolidColorBrush x:Key="BorderBrush" Color="#FF444444" />
                    <SolidColorBrush x:Key="ForegroundBrush" Color="#EEEEEE" />
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/SmartTags;component/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Transparent" ClipToBounds="True">
        <Border
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2"
            ClipToBounds="True"
            CornerRadius="10"
            Opacity="0.7"
            SnapsToDevicePixels="True">
            <Border.Effect>
                <BlurEffect KernelType="Gaussian" Radius="2" />
            </Border.Effect>
        </Border>

        <Border
            Margin="2"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Simple Title Bar without buttons -->
                <Border
                    Grid.Row="0"
                    Background="{DynamicResource PrimaryBackgroundBrush}"
                    CornerRadius="9,9,0,0"
                    MouseDown="TitleBar_MouseDown">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Save Preset" />
                </Border>

                <StackPanel
                    Grid.Row="1"
                    Margin="20,20,20,15"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="12"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Preset Name" />
                    <TextBox
                        x:Name="PresetNameTextBox"
                        Width="340"
                        Height="32"
                        Padding="8,6"
                        VerticalContentAlignment="Center"
                        FontSize="12"
                        Style="{StaticResource CustomTextBoxStyle}" />

                    <Grid Margin="0,8,0,0" Width="340">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Width="166"
                            Height="32"
                            Margin="0,0,4,0"
                            Click="SaveButton_Click"
                            Content="Save"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource CustomActionButtonStyle}" />
                        <Button
                            Grid.Column="1"
                            Width="166"
                            Height="32"
                            Margin="4,0,0,0"
                            Click="CancelButton_Click"
                            Content="Cancel"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource CustomActionButtonStyle}" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
